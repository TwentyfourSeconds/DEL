<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu_bar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_home_black_24dp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="455dp" />

        <ImageView
            android:id="@+id/menu_bar_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_group_black_24dp"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="455dp" />

        <ImageView
            android:id="@+id/menu_bar_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_chat_black_24dp"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="455dp" />

        <ImageView
            android:id="@+id/menu_bar_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_person_black_24dp"
            tools:layout_editor_absoluteX="311dp"
            tools:layout_editor_absoluteY="455dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>